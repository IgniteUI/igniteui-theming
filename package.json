{
  "name": "igniteui-theming",
  "version": "1.0.0-beta.4",
  "description": "A set of Sass variables, mixins, and functions for generating palettes, typography, and elevations used by Ignite UI components.",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf \"json/\"",
    "build": "npm run build:json && npm run build:e2e",
    "build:docs": "npx sassdoc ./sass",
    "build:e2e": "sass ./test/e2e/theme.scss ./test/e2e/theme.css",
    "build:json": "node scripts/buildJSON.mjs",
    "lint": "stylelint ./sass",
    "test": "jest",
    "serve:docs": "npx http-server ./sassdoc"
  },
  "files": [
    "/sass",
    "/json",
    "/_index.scss"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IgniteUI/igniteui-theming.git"
  },
  "keywords": [
    "sass",
    "Ignite",
    "UI",
    "theming",
    "palettes",
    "elevations",
    "typography"
  ],
  "author": "Infragistics",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/IgniteUI/igniteui-theming/issues"
  },
  "homepage": "https://github.com/IgniteUI/igniteui-theming#readme",
  "exports": {
    ".": {
      "sass": "./_index.scss"
    },
    "./functions": {
      "sass": "./sass/_functions.scss"
    }
  },
  "devDependencies": {
    "globby": "^13.1.2",
    "jest": "^28.1.1",
    "postcss": "^8.4.14",
    "rimraf": "^3.0.2",
    "sass-export": "^2.1.2",
    "sass-true": "^6.1.0",
    "stylelint": "^14.9.1",
    "stylelint-config-standard-scss": "^4.0.0",
    "stylelint-scss": "^4.2.0"
  },
  "peerDependencies": {
    "sass": "^1.53.0"
  }
}
